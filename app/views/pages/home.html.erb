<!-- BANNER & INFO FORM-->
      <div class = "banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://book2sail.com/wp-content/uploads/2020/04/sailboat-1200x900.jpg)">
        <div class="booking-form">
          <div class="title-card-reservation">
            <h1>What's the next adventure?</h1>
          </div>
          <input type="search" placeholder="Where do you want to rent a boat?" autocomplete="neverautocomplete" class="form-control">
          <div class="boat-type">
            <input type="submit" value="🚤 Motorboat" autocomplete="neverautocomplete" class="form-control home-input-search">
            <input type="submit" value=" ⛵️ Sailboat" autocomplete="neverautocomplete" class="form-control home-input-search">
          </div>

          <div class="date-booking">
            <div class="date-left">
              <div class="input-date">
              <%= simple_form_for :search, method: "get" do |f| %>
                  <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
                <% end %>
              </div>
            </div>
            <div class="date-left">
              <div class="input-date">
              <%= simple_form_for :search, method: "get" do |f| %>
                  <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
                <% end %>
              </div>
            </div>
          </div>
            <a href="/boats"><button type="submit" class="btn-search"> Search </button></a>
          </div>
          <div class="banner-title">
            <p>Sail whenever you want, wherever you want</p>
          </div>
      </div>

