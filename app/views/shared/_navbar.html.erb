<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/8/80/Travel_boat_blue_logo.png" %>
    <% end %>
    <%= link_to "Sail me!", "/", class: "navbar-nav mr-auto navbar-sail-me", style:"text-decoration: none;"%>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Register a boat", new_boat_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Boats to sail", boats_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "My boats", my_boats_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My bookings", my_bookings_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <% console %>
          <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My profile", "#", class: "dropdown-item" %>
            <%= link_to "My bookings", "/bookings", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
