<div class = "container">
  <div class = 'd-flex justify-content-between align-items-center mt-3 mb-3'>
    <h1> Choose your boat to sail </h1>
    <div class = 'add-btn'> <span> <%= link_to  "Add a boat", new_boat_path %> </span> </div>
  </div>
  <div class="boats-map-container">

    <%# Boats grid %>
    <div class = 'boats'>
      <% @boats.each do |boat| %>
      <%= link_to boat_path(boat), { class: "card-link" } do %>
        <div class = 'boat-card'>
          <div class = "boat-image" style="background-image: url('<%= cl_image_path boat.photo.key, height: 220, crop: :fill %>')">
          </div>
          <div class = 'boat-infos'>
            <h4 class = 'boat-title'> <%= boat.title.capitalize %> </h4>
            <div> <%= boat.location %> </div>
          </div>
          <div class = 'boat-infos'>
            <% if boat.category == "motorboat"%>
              <p> ðŸš¤ <%= boat.category %> </p>
              <% else %>
              <p> â›µ <%= boat.category %> </p>
            <% end %>
            <p> <%= boat.price_per_day %> â‚¬/day </p>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>

    <%# Mapbox %>
    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>


</div>
