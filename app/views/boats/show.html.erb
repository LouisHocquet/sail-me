<div class="container" id = 'boat'>
  <div> <%= cl_image_tag @boat.photo.key, height: 300, width: 400, crop: :fill %> </div>
  <h1> <%=  @boat.brand %> - <%= @boat.category%> (<%= @boat.location %>)</h1>
  <div> <%= link_to "Edit", edit_boat_path, class: 'btn btn-secondary' %> </div>
  <div> <%= link_to "Remove", boat_path(@boat), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure?" } %> </div>
</div>

<div> <%= link_to "Back to boats", boats_path, class: 'btn btn-primary' %> </div>

